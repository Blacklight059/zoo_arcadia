{% extends 'base.html.twig' %}

{% block title %}Veterinarian index{% endblock %}

{% block body %}
    <h3 class="m-3">Index des Vétérinaires</h1>

    <table class="table m-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for veterinarian in veterinarians %}
            <tr>
                <td>{{ veterinarian.id }}</td>
                <td>{{ veterinarian.email }}</td>
                <td>{{ veterinarian.roles ? veterinarian.roles|json_encode : '' }}</td>
                <td>{{ veterinarian.password }}</td>
                <td>{{ veterinarian.name }}</td>
                <td>{{ veterinarian.firstname }}</td>
                <td>
                    <a href="{{ path('app_veterinarian_show', {'id': veterinarian.id}) }}">show</a>
                    <a href="{{ path('app_veterinarian_edit', {'id': veterinarian.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn col-lg-2 col-md-6 col-10 m-2" href="{{ path('app_veterinarian_new') }}">Créer un nouveau Vétérinaire</a>
{% endblock %}
