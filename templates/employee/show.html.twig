{% extends 'base.html.twig' %}

{% block title %}Employee{% endblock %}

{% block body %}
    <h3 class="m-3">Employé</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ employee.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ employee.roles ? employee.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ employee.password }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ employee.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ employee.firstname }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn-back m-3" href="{{ path('app_employee_index') }}">Retour à la iste</a>

    <a href="{{ path('app_employee_edit', {'id': employee.id}) }}">Editer</a>

    {{ include('employee/_delete_form.html.twig') }}
{% endblock %}
