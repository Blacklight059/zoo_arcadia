{% extends 'base.html.twig' %}

{% block title %}FoodConsumption index{% endblock %}

{% block body %}
    <h1>FoodConsumption index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateTime</th>
                <th>FoodType</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for food_consumption in food_consumptions %}
            <tr>
                <td>{{ food_consumption.id }}</td>
                <td>{{ food_consumption.dateTime ? food_consumption.dateTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ food_consumption.foodType }}</td>
                <td>{{ food_consumption.quantity }}</td>
                <td>
                    <a href="{{ path('app_food_consumption_show', {'id': food_consumption.id}) }}">show</a>
                    <a href="{{ path('app_food_consumption_edit', {'id': food_consumption.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_food_consumption_new') }}">Create new</a>
{% endblock %}
